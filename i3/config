    background #1D1F28
    statusline #B1B1B1
    focused_workspace #CECECE #2494FC #000000
    active_workspace #333333 #2494FC #888888
    inactive_workspace #CECECE #333333 #f1f1f1
    urgent_workspace #eb709b #FF334C #ffffff
   }
}
